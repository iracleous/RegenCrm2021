@{
}
@model BasketWithProducts


@{
    ViewData["Title"] = "Create Basket";
}

<h1> Create Basket</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBasket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Basket.Customer.FirstName" class="control-label"></label>
                <input asp-for="Basket.Customer.FirstName" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Basket.Customer.FirstName" class="text-danger"></span>
            </div>
           
            <input type="hidden" asp-for="Basket.Id" />

            <div class="form-group">
                <label asp-for="ProductIds" class="control-label"></label>
                <select asp-for="ProductIds" multiple="multiple"
                        asp-items="@(new SelectList(Model.Products,"Value","Text")) "
                        class="form-control"></select>
                <span asp-validation-for="ProductIds" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

